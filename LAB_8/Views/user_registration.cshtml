
@{
    ViewData["Title"] = "user_registration";
}

<h2>user_registration</h2>

<form method="post" class="mt-3">
    <div class="from-group row">
        <label class="col-sm-2 col-form-label">FirstName</label>
        <div class="col-sm-10"><input name="fname" class="form-control" type="text" /></div>
    </div>
    <br />
    <div class="from-group row">
        <label class="col-sm-2 col-form-label">LastName</label>
        <div class="col-sm-10"><input name="lname" class="form-control" type="text" /></div>
    </div>
    <br />
    <div class="from-group row">
        <label class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10"><input name="email" type="email" class="form-control" /></div>
    </div>
    <br />
    <div class="from-group row">
        <label class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10"><input name="pswd" type="password" class="form-control" /></div>
    </div>
    <br />
    <div class="from-group row">
        <label class="col-sm-2 col-form-label">RePassword</label>
        <div class="col-sm-10"><input name="rpswd" type="password" class="form-control" /></div>
    </div>
    <br />
    <button type="submit" class="btn-success" style="width:auto">Register</button>
</form>